<%= form_for @movie do |f| %>

  <% if @movie.errors.any? %>
    <%= @movie.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>
<div class = "movie-name">
  Movie Name:
  <%= f.text_field :name %>
</div>
<div class = "movie-imdb-link">
  Movie Imdb Url:
  <%= f.text_field :imdb_url %>
</div>
<%- f.label :movie_image %>
  <%= f.file_field :movie_image %>

  <%= f.submit %>

<% end %>


<h2>Review for <%= @review.movie.name %></h2>

<% @review.ratings.split(',').each_with_index do |val,index| %>
	<%if index < 5 %>
		<%= @labels[index] %> is <%= val %> / 10 <br>
	<% else %>
		<%= @labels[index] %> is <%= val %> / 50 <br>
	<% end %>
<% end %>
<h3><%if @total%><div id = "total-score" style = "background-color: rgb(<%=(255- @total *2.5).to_i%>,<%= (255-@total *2.5).to_i%>,<%=(255- @total *2.5).to_i%>);"><%= @total %></div></h3><%end%>
<br><br>
<p><%= @review.content %></p>



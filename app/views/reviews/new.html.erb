Create your review of <%= @review.movie.name %>
<style>
#review_content {width: 400px; height: 600px;}
body {text-align: left;}
</style>

<%= form_for @review do |f| %>

  <% if @review.errors.any? %>
    <%= @review.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

 <table>

  <% 9.times do |x| %>
    <tr>
    <td><%= @labels[x] %></td>
    <td>
    <% 10.times do |y| %>
      <input type="radio" name="review[rubric<%=x+1%>]" value="<%=y+1%>">
      <span style="color: #<%= (12-y).to_s(16) %><%= (y+4).to_s(16) %>6"><%=y+1%></span>
    <% end %>
    </td></tr>
  <% end %>
</table>
<br><br>
  <%= f.label :content %><br>
  <%= f.text_area :content %>
<br><br>

  <%= f.submit %>

<% end %>

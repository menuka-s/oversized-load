<div id
<%= form_for @event, :html => {id: "new-event"} do |f| %>

  <% if @event.errors.any? %>
    <%= @event.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

  <%= f.label :pub_date %>
  <%= f.date_field(:event, :pub_date) %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>

  <%= f.submit %>

<% end %>
